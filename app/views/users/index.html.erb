<div class="container">
  <div class="row">
    <div class="col-md-3">
  　<%= render 'books/user', user: @user, book: @book %>
  　</div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr></tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |book| %>
        <tr>
          <td>
            <%= attachment_image_tag book, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= book.name %>
          </td>
          <td>
            <%= link_to "Show", user_path(book.id) %>
          </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>