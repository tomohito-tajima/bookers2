<div class="container">
  <div class="row">
    <div class="col-md-12">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>name</th>
          <th>introduction</th>
        </tr>
      </thead>
      <tbody id="user">
      <% users.each do |users| %>
        <tr>
          <td>
            <%= attachment_image_tag users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= link_to user_path(users) do %>
              <%= users.name %><br>
            <% end %>
          </td>
          <td>
            <%= users.introduction %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>