<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <%= form_with model:@user, local:true do |f| %>
  　　    　<div class="form-group">
            <label for="user_name">Name</label></br>
            <%= f.text_field :name, autofocus: true, id:"inputtitle", placeholder:"名前" %>
          </div>
          <div>
            <%#= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
            <label for="inputImage">Image</label></br>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <label for="user_Introduction">Introduction</label></br>
            <%= f.text_area :introduction, autofocus: true, id:"inputbody", placeholder:"紹介" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-sm btn-secondary destroy_user_id" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>