<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        
        <%= form_with model:@book, local:true do |f| %>
  　　    　<div class="form-group">
            <label for="book_title">Title</label></br>
            <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:"タイトル" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label></br>
            <%= f.text_area :body, autofocus: true, id:"inputbody", placeholder:"本文" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book", class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>