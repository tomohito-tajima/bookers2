  <div class="col-md-3">
      <h2>User info</h2>
      <img class="attachment user profile_image fallback" src="/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg">

      <table class="table">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "",edit_user_path(user.id), class: :"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_33315" %>
        <!--<a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_33315" href="/users/33315/edit"></a>-->
      </div>
      <h2>New book</h2>
      <!-- form_with部分 -->
      <%= form_with model:book, url:'/books', local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
  </div>