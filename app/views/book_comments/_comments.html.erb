 
        <% book.book_comments.each do |book_comment| %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <%= book_comment.comment %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger destroy_book_id", method: :delete, remote: true %>
          <% if book_comment.user == current_user %>
          <div>
            <%= book_comment.user.name %>
          </div>
          <% end %>
        <% end %>